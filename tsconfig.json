{
  "compilerOptions": {
    "outDir": "src/aot-compiled",
    "sourceRoot": "src",
    "baseUrl": "src",
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "lib": [
      "es2015",
      "dom"
    ],
    "declaration": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "noEmit": false,
    "removeComments": false,
    "noImplicitAny": true,
    "noUnusedParameters": false,
    "noUnusedLocals": true,
    "noImplicitThis": true,
    "suppressImplicitAnyIndexErrors": true
  },
  "compileOnSave": false,
  "files": [
    "src/main.ts"
  ],
  "include": [
    "src/**/*.module.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "typeRoots": [
    "node_modules/@types"
  ],
  "awesomeTypescriptLoaderOptions": {
    "useWebpackText": true
  },
  "angularCompilerOptions": {
    "genDir": "src/aot-compiled",
    "skipMetadataEmit" : true
  }
}